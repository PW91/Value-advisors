{% extends '_layouts/base.nunjucks' %}
{% block content %}
<div class='frame'></div>
<div class='frame-content'>
    <div class='left-column'>
        <img src='images/logo.png' />
        <nav class='nav'>
            <ul class='nav-list'>
                <li class='nav-item nav-item-hello active'><a href='#hello'>Powitanie</a></li>
                <li class='nav-item nav-item-about'><a href='#about'>O nas</a></li>
                <li class='nav-item nav-item-offer'><a href='#offer'>Oferta</a></li>
                <li class='nav-item nav-item-exp'><a href='#exp'>Doświadczenie</a></li>
                <li class='nav-item nav-item-clients'><a href='#clients'>Klienci</a></li>
                <li class='nav-item nav-item-contact'><a href='#contact'>Kontakt</a></li>
